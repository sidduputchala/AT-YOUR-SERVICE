 <br><br>
  <h2>Customer Details </h2>
  
    <br>
   
    <br>
    <table border="2px">
        <tr id=>
            <th><h5>Email</h5></th>
           
            <th><h5>First Name</h5></th>
            <th><h5>Last Name</h5></th>

            <th><h5>Mobile No</h5></th>
            <th><h5>Address</h5></th>
            <th><h5>City</h5></th>
            <th><h5>Delete</h5></th>
            
        </tr>



        
    
        <% custlist.forEach(item => { %>
    
        <tr>
            <th><%= item.email %></th>
            
            <th><%= item.firstname %></th>
            <th><%= item.lastname %></th>
            <th><%= item.contactnumber %></th>
            <th><%= item.address %></th>
            <th><%= item.city %></th>

            
            <th><form action="/customerdelete/<%= item._id %>" method="post">
              <center><button name="delete" type="submit" class="btn btn-outline-primary">Delete</center>
                      
          </form></th>
            
   
    
        </tr>
    <% }) %>
    
    </table>




    

  

