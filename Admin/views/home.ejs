<body>


  <!--Navbar-->
  <%- include('./partials/nav.ejs') %>

  <br><br>

  <center><h1><u>Admin Dashboard</u></h1></center>
  <br><br><br>

        <div class="container">
          <div class="row">
            <div class="col">
              <div class="card text-dark bg-info mb-3" style="max-width: 22rem;">
                <center><div class="card-header"><i class="fa-solid fa-chart-line"></i>Customers</div></center>
                <div class="card-body">
                 <center><h5 class="card-title"><%=custcount %></h5></center> 
                <!-- <p class="card-text"></p> -->
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card text-dark bg-light mb-3" style="max-width: 22rem;">
               <center><div class="card-header"><i class="fa-solid fa-chart-line"></i>Employees</div></center> 
                <div class="card-body">
                  <center><h5 class="card-title"><%=empcount %></h5></center>
                  <!-- <p class="card-text"></p> -->
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card text-white bg-dark mb-3" style="max-width: 22rem;">
