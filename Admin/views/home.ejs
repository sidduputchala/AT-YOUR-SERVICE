                </div>
              </div>
            </div>
          </div>
        </div>

        <br><br><br>
        <hr>

        <br><br>
        <form action="/home1" method="post" >
         <center><h2>Make Public announcement to all users</h2></center>
          <div class="input-group" id="ann">
            <textarea rows="6" cols="80" name="announcement" ></textarea>
          </div>
          <div id="sub">
            <button type="submit" class="btn btn-primary">Send</button>
          </div>
          
        </form>


        <br><br>
        <br>
        <hr>
        <br>
        

        <!--Footer-->
        <%- include('./partials/footer.ejs') %>




