  <body>
    
      <!--Navbar-->
      <%- include('./partials/enav.ejs') %>       
    <br>
      <center><strong><h1 style="color: rgba(10, 92, 186, 0.829);">Orders Requested</h1></strong></center>

      <% order.forEach(element => { %>
        <% if(element.employeeid == emp._id)  { %>
            <pre><h1> Service Requested: <i><%= element.servicename %></i></h1></pre>
          <% customers.forEach(x=> { %>
             <% if(x._id==element.customerid) {%>
               
                <p style="border-style: inset;">

                    <pre> <h2>      Customer details :- </h2></pre>
                    <pre><h3>            Name: <%= x.firstname%></h3></pre>
                    <pre><h3>            email :<%= x.email %></h3></pre>
                    <pre><h3>            city:<%= x.city %></h3></pre>
                    <pre><h3>            State:<%= x.state %></h3></pre>                         
                    <pre><h3>            Residential address:<%= x.address %></h3></pre>
                    <pre><h3>            Contact number:<%= x.contactnumber %></h3></pre>              
                    <% } %>
                    <% }) %>
                </p>             


       <form  action="/payment/<%= element._id %>" method="post">
   <pre>  <h1>      Cost:</h1><input name ="payment" type="number" placeholder="enter the amount" style="margin-left:250px">  </pre>
             
        
        <input name="employeeid" value="<%=emp._id %>" type="hidden" >
           <center><button name="payment" type="submit" class="btn btn-outline-primary">Post</center>          
        </form>
      </hr>
         <% } %>        
      <% })  %>

    
 
    <!--Footer-->
<%- include('./partials/footer.ejs') %>


